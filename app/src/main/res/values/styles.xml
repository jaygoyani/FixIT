<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="scaling_from_center">
        <item name="android:windowEnterAnimation">@anim/scaleoutfrom50</item>
        <item name="android:windowExitAnimation">@anim/scaleinto50</item>
    </style>

    <style name="poppins_bold_16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_bold_18">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_bold_24">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_bold_20">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_medium_18">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_medium_16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_medium_14">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_medium_12">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_regular_16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppins_regular_14">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppins_regular_12">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="button_style" parent="poppins_medium_16">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/violet</item>
    </style>

    <style name="negative_button_style" parent="poppins_medium_16">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/error</item>
    </style>

    <style name="edit_text" parent="poppins_regular_16">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_grey_hollow_rect</item>
    </style>

    <style name="single_line_et" parent="edit_text">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="multi_line_et" parent="edit_text">
        <item name="android:lines">4</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

</resources>